{
  "name": "weather-dashboard",
  "version": "1.0.0",
  "description": "A responsive weather dashboard application",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8000 -o",
    "dev": "npx live-server --port=8000",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.0",
    "http-server": "^14.1.1",
    "jest": "^29.0.0",
    "jsdom": "^22.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "api/**/*.js",
      "components/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "express": "^5.1.0"
  }
}
